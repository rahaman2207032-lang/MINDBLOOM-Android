<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Required permissions for Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MindBloomApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MINDBLOOMANDROID"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.UserDashboardActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.InstructorDashboardActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.JournalActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.MoodTrackerActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.HabitTrackerActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.SleepTrackerActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.StressMonitorActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.MeditationActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.NotificationActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.ClientProgressActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.InstructorDashboardActivity" />

        <activity
            android:name=".activities.MoodAnalyticsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.ProgressActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.TherapistSessionActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.CommunityForumActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.PostDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait" />


    </application>

</manifest>


