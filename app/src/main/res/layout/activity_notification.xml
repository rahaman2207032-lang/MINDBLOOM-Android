<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#34495e"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Header with Mark All Read button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:elevation="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Filter Notifications"
                android:textSize="14sp"
                android:textColor="#666666"
                android:textStyle="bold" />

            <Button
                android:id="@+id/markAllReadBtn"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Mark All Read"
                android:textSize="11sp"
                android:backgroundTint="#3498db"
                android:textColor="@android:color/white"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />
        </LinearLayout>

        <!-- Filter Tabs -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <Button
                    android:id="@+id/allNotificationsBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="All"
                    android:textSize="14sp"
                    android:backgroundTint="#3498db"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="8dp"
                    android:minWidth="80dp" />

                <Button
                    android:id="@+id/messagesBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Messages"
                    android:textSize="14sp"
                    android:backgroundTint="#95a5a6"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="8dp"
                    android:minWidth="100dp" />

                <Button
                    android:id="@+id/sessionsBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Sessions"
                    android:textSize="14sp"
                    android:backgroundTint="#95a5a6"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="8dp"
                    android:minWidth="100dp" />

                <Button
                    android:id="@+id/systemBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="System"
                    android:textSize="14sp"
                    android:backgroundTint="#95a5a6"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="8dp"
                    android:minWidth="90dp" />

                <Button
                    android:id="@+id/refreshBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="ðŸ”„ Refresh"
                    android:textSize="14sp"
                    android:backgroundTint="@android:color/transparent"
                    android:textColor="#3498db"
                    android:minWidth="90dp" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Notifications List -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/notificationsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:clipToPadding="false" />

            <TextView
                android:id="@+id/emptyStateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ðŸ“­ No notifications to display"
                android:textSize="16sp"
                android:textColor="#7f8c8d"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
