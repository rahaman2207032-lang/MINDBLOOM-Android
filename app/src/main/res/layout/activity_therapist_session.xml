<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:titleTextColor="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Request New Session Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“… Request New Session"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50"
                        android:layout_marginBottom="16dp" />

                    <!-- Instructor Selection -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Instructor"
                        android:textSize="14sp"
                        android:textColor="#555"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/instructorSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@android:drawable/edit_text"
                        android:padding="12dp"
                        android:spinnerMode="dropdown" />

                    <!-- Date and Time Selection -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Session Date &amp; Time"
                        android:textSize="14sp"
                        android:textColor="#555"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <Button
                            android:id="@+id/selectDateButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Select Date"
                            android:backgroundTint="#3498DB"
                            android:textColor="@android:color/white"
                            android:layout_marginEnd="8dp" />

                        <Spinner
                            android:id="@+id/sessionTimeSpinner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:drawable/edit_text"
                            android:padding="12dp"
                            android:spinnerMode="dropdown" />

                    </LinearLayout>

                    <!-- Session Type -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Session Type"
                        android:textSize="14sp"
                        android:textColor="#555"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/sessionTypeSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@android:drawable/edit_text"
                        android:padding="12dp"
                        android:spinnerMode="dropdown" />

                    <!-- Reason/Notes -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reason/Notes (Optional)"
                        android:textSize="14sp"
                        android:textColor="#555"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/reasonEditText"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@android:drawable/edit_text"
                        android:gravity="top|start"
                        android:hint="Enter any additional information..."
                        android:inputType="textMultiLine"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Submit Button -->
                    <Button
                        android:id="@+id/submitRequestBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Submit Request"
                        android:backgroundTint="#27AE60"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Pending Session Requests Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="â³ Pending Requests"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50" />

                        <Button
                            android:id="@+id/refreshBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”„"
                            android:textSize="16sp"
                            android:minWidth="48dp"
                            android:minHeight="48dp"
                            android:backgroundTint="#95A5A6" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/emptyPendingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No pending requests"
                        android:textSize="14sp"
                        android:textColor="#95A5A6"
                        android:visibility="gone"
                        android:padding="16dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/pendingRequestsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Confirmed Upcoming Sessions Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ… Confirmed Sessions"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ready to join"
                        android:textSize="12sp"
                        android:textColor="#27AE60"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/emptyConfirmedText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No confirmed sessions"
                        android:textSize="14sp"
                        android:textColor="#95A5A6"
                        android:visibility="gone"
                        android:padding="16dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/confirmedSessionsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
