<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Initial Circle, Name and Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Client Initial Circle -->
            <TextView
                android:id="@+id/clientInitial"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="C"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:background="@drawable/circle_background"
                android:backgroundTint="#7F9C96"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/clientName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Client Name"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#3498DB"
                android:text="View"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                style="?attr/materialButtonOutlinedStyle" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray" />

        <!-- Stats Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2">

            <!-- Total Sessions -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sessions: "
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/clientSessions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Stress Level -->
            <TextView
                android:id="@+id/stressLevelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Stress: Moderate"
                android:textColor="#E67E22"
                android:textSize="14sp" />

            <!-- Last Session -->
            <TextView
                android:id="@+id/clientLastSession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_margin="4dp"
                android:text="Last Session: N/A"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

        </GridLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

